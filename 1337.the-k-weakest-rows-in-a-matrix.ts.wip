 *
 * [1337] The K Weakest Rows in a Matrix
 */

// @lc code=start
function kWeakestRows(mat: number[][], k: number): number[] {
    return mat
        .map((row, idx) => ({
            idx,
            strength: row.reduce((sum, val) => sum + val, 0)
        }))
        .sort((a, b) => a.strength - b.strength || a.idx - b.idx)
        .slice(0, k)
        .map(item => item.idx);
};
// @lc code=end

